<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Widget.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/icon</item>
        <item name="android:backgroundTint">@color/primary</item>
    </style>

    <style name="Widget.ButtonRound" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/radius_24</item>
        <item name="iconTint">@color/white</item>
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:layout_marginStart">@dimen/margin_5</item>
        <item name="android:layout_marginEnd">@dimen/margin_5</item>
    </style>

    <style name="Theme.ActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="Widget.AlertDialog.RoundShapeTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="shapeAppearanceMediumComponent">@style/Widget.AlertDialog.RoundShapeAppearance</item>
    </style>

    <style name="Widget.AlertDialog.RoundShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="SpinnerSolid" parent="Widget.AppCompat.Spinner">
        <!--<item name="android:background">@drawable/rounded_text_view_stroke</item>-->
        <item name="android:layout_marginStart">@dimen/margin_8</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
        <item name="android:layout_marginTop">@dimen/margin_10</item>
    </style>

    <style name="Widget.NormalButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/margin_10</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
    </style>

    <style name="Widget.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/margin_10</item>
        <item name="strokeColor">@color/buttonBorderColor</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
    </style>

    <style name="Widget.Button.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:minHeight">24dp</item>
    </style>

    <style name="Widget.Button.WhiteIconOnly" parent="Widget.Button.IconOnly">
        <item name="iconTint">@color/white</item>
    </style>

    <style name="Widget.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/backgroundCardColor</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="cardCornerRadius">@dimen/card_radius_6</item>
        <item name="android:layout_margin">@dimen/margin_5</item>
        <item name="contentPadding">@dimen/margin_5</item>
    </style>

    <style name="Widget.CardViewMaps" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/transparent</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="cardCornerRadius">@dimen/card_radius_6</item>
        <item name="android:layout_margin">@dimen/margin_5</item>
        <item name="contentPadding">@dimen/margin_5</item>
    </style>

    <style name="Widget.CardView.NoBackground" parent="CardView">
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="cardCornerRadius">@dimen/card_radius_6</item>
        <item name="android:layout_margin">@dimen/margin_5</item>
        <item name="contentPadding">@dimen/margin_5</item>
    </style>

    <style name="Widget.TextView.TextViewRound" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/margin_10</item>
        <item name="android:layout_marginEnd">@dimen/margin_10</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">@dimen/margin_10</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Widget.TextView.TextViewDisplay1" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:layout_marginStart">@dimen/margin_8</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
        <item name="fontFamily">@font/noto_sans_symbols_medium</item>
    </style>

    <style name="Widget.TextView.TextViewHeader" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:layout_marginStart">@dimen/margin_8</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="fontFamily">@font/noto_sans_symbols_bold</item>
    </style>

    <style name="Widget.TextView.TextViewSubHeader" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:layout_marginStart">@dimen/margin_8</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="fontFamily">@font/noto_sans_symbols_semi_bold</item>
    </style>

    <style name="Widget.TextView.TextViewSmall" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:layout_marginStart">@dimen/margin_8</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="fontFamily">@font/noto_sans_symbols_light</item>
    </style>

    <style name="Widget.TextView.TextViewNormal" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:layout_marginStart">@dimen/margin_8</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="fontFamily">@font/noto_sans_symbols_medium</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/mtrl_textinput_default_box_stroke_color</item>
        <item name="errorTextAppearance">@color/error_color</item>
        <item name="android:layout_marginStart">@dimen/margin_10</item>
        <item name="android:layout_marginEnd">@dimen/margin_10</item>
        <item name="android:layout_marginTop">@dimen/margin_10</item>
    </style>

    <style name="TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/primary_text</item>
    </style>

</resources>